FROM hub.test.com/builder/node14-base-web:latest
WORKDIR /web/
COPY web/. .
RUN npm install --registry=https://art-internal.test.com/artifactory/api/npm/npm/
RUN npm run build

FROM art-internal.test.com/library/nginx:alpine
COPY ./docker_env/nginx/prod.conf /etc/nginx/conf.d/prod.conf
COPY --from=0 /web/dist /usr/share/nginx/html
